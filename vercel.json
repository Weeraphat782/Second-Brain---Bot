{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": ".",
    "functions": {
        "api/**/*.ts": {
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/cron/morning",
            "schedule": "0 1 * * *"
        },
        {
            "path": "/api/cron/midday",
            "schedule": "30 6 * * *"
        },
        {
            "path": "/api/cron/nightly",
            "schedule": "0 14 * * *"
        }
    ]
}